<% content_for :principal_content do %>
  <% if @posts.empty? %>
    <p>No posts</p>
  <% else %>
    <% @posts.each do |post| %>
      <h1>
        <%= link_to post.name, post_path(post) %>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_post_path(post), :class => "btn" %>
          <%= link_to 'X', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary pull-right delete_post" %>
        <% end %>
      </h1> 
      <p>
        </span> Posted on <%= post.created_at %>
      </p>
      <p> <%= post.text.split(" ").first(50).join(" ") %> </p>
      </br>
      </br>
      <a class="btn btn-primary" href="/posts/<%=post.id%>">Read More </a>
      <hr>
    <% end %>
  <% end %>
<% end %>

<% content_for :javascript_content do %>
  <%= javascript_include_tag 'posts', 'data-turbolinks-track' => true %>
<% end %>